PUTPARS(('p3', 'spdb0', 'spnam0', 'spoffs0'), p3lp + (filename, 0))

ut.putcomment('SETUP ACQUISITION')
PUTPARS(('dw', 'td', 'si'), (40*scale, 32768, 65536))

